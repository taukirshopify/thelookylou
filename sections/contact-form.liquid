    "id": "contact_module_address1",
    "label": "Address 1",
    "default": "No: 58 A, East Madison Street,"
    },
    {
    "type": "textarea",
    "id": "contact_module_address2",
    "label": "Address 2",
    "default": "Baltimore, MD, USA 4508"
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]

{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    margin:0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .contact-from-wrapper {
    max-width: 682px;
    padding: 30px;
    background: white;
    border-radius: 30px;
    margin: 0 auto;
}
.layout-type {
    display: flex;
    flex-wrap: wrap;
    margin: 0 calc(-.5* var(--DTGutter_Width));
    align-items: center;
}
.field{

  display:block;
  margin-bottom: 1.78rem !important;
  
}


.contact .field {
    margin-bottom: 1.78rem;
}

.contact-from-wrapper p {
    color: #505050;
    margin-bottom: 30px;
    margin-top: 5px;
}
.layout-type .contact-form-section .field__label {
  color: #363636;
    font-weight: 600;
    margin-bottom: 6px;
    display: block;
}

.isolate {
    padding: 1px;
}
#contact {
    line-height: 0;
}
#contact  .breadcrumb{
  display:none;
}
.contact  .field__input{

  border: 1px solid #A3A3A3 !important;
  border-radius: 5px;

}
.contact  .field__input:focus {
    padding: 1rem 2rem;
}
.contact  .field__input::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
  color: #A3A3A3;
  opacity: 1; /* Firefox */
}
.contact  .field__input::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color:  #A3A3A3;
}
.contact  .field__input::-moz-placeholder { /* Firefox 19+ */
  color:  #A3A3A3;
}
.contact  .field__input:-ms-input-placeholder { /* IE 10+ */
  color:  #A3A3A3;
}
.contact  .field__input:-moz-placeholder { /* Firefox 18- */
  color:  #A3A3A3;
}
.contact  .field__label, .customer .field label{

  position:unset !important;
}

@media screen and (max-width: 750px) {
  .contact-from-wrapper {

    padding: 14px;
    margin:30px 9px;

} 
#contact button#Subscribe {
    margin: 4px 0;
}

}
{%- endstyle -%}


<style>

  .section-{{ section.id }} h2.title{
    text-align: left;
    margin:0;
    {% render 'globalcolor' , color: section.settings.color_scheme_font %}
    font-size: {{ section.settings.heading_scale_mobile }}px !important; 
    }
  
    @media screen and (min-width: 750px) {
  
      .section-{{ section.id }} h2.title{
        {% render 'globalcolor' , color: section.settings.color_scheme_font %}
        font-size:{{ section.settings.heading_scale }}px !important; 
        }
  
    }
</style>
  <div class="color-{{ section.settings.color_scheme }}  section-{{ section.id }} ">
  <div class="{% if section.settings.page_full_width %} page-full-width {% else %} page-width {% endif %} {% if section.settings.page_full_width_spacing %} page-full-width_spacing {% endif %}section-{{ section.id }}-padding isolate">
<div class="row">  
  <div class="layout-type {{section.settings.contact_layout}}">
  {% if section.settings.enable_gmap %}
  <div class="map">
    {{ section.settings.contact_iframe_code }} 
  </div>
    {% endif %}
            {% if section.settings.enable_contact_info %}


        <ul class="dt-contact-iconblock-section dt-sc-column {% if section.settings.contact_phone != blank and section.settings.contact_module_email == blank and section.settings.contact_module_address == blank %}one-column{% endif %}{% if section.settings.contact_phone != blank and section.settings.contact_module_email != blank and section.settings.contact_module_address == blank %}two-column{% endif %}{% if section.settings.contact_phone != blank and section.settings.contact_module_email != blank and section.settings.contact_module_address != blank %}three-column{% endif %} wow {% if  section.settings.animation_effect == true %} {{ section.settings.animation_effect_iconblock_section }} {% endif %} ">
          {% if section.settings.contact_phone %}         
          <li class="dt-contact-icon-block">
            {% if section.settings.contact_icon_1 != blank  %}
            <div class="dt-contact-icon-image">
              <i class="{{section.settings.contact_icon_1}}"></i> 
            </div>
            {% endif %}
            <div class="dt-contact-icon-content">
              <h5>{{ section.settings.contact_module_contact_phonetitle }}</h5>
              <p>  {{ section.settings.contact_phone1 }} <br>{{ section.settings.contact_phone2 }}</p><mark></mark>
            </div>
          </li>
          {% endif %}        
          {% if section.settings.contact_module_email %}        
          <li class="dt-contact-icon-block">
            {% if section.settings.contact_icon_2 != blank  %}
            <div class="dt-contact-icon-image">
              <i class="{{section.settings.contact_icon_2}}"></i>
            </div>
            {% endif %}
            <div class="dt-contact-icon-content">
              <h5>{{ section.settings.contact_module_contact_title }}</h5>
              <p> 
                <a title="{{ section.settings.contact_module_email1 }}" href="mailto:{{ section.settings.contact_module_email1 }}">{{ section.settings.contact_module_email1 }}</a><br>
                <a title="{{ section.settings.contact_module_email2 }}" href="mailto:{{ section.settings.contact_module_email2 }}">{{ section.settings.contact_module_email2 }}</a>
              </p> 
            </div>
          </li>
          {% endif %}        
          {% if section.settings.contact_module_address %} 
          <li class="dt-contact-icon-block"> 
            {% if section.settings.contact_icon_3 != blank  %}
            <div class="dt-contact-icon-image">
              <i class="{{section.settings.contact_icon_3}}"></i>
            </div> 
            {% endif %}
            <div class="dt-contact-icon-content">
              <h5>{{ section.settings.contact_module_address_title }}</h5>
              <p> {{ section.settings.contact_module_address1 }}<br /> {{ section.settings.contact_module_address2 }}<br />{{ section.settings.postcode }}</p><mark></mark> 
            </div>
          </li>
          {% endif %}

          {% if section.settings.image %} 
                  <div class="image-wrapper">
                     <img src="{{ section.settings.image |img_url:'master' }}" alt="image">
                  </div>
          {% endif %}

        </ul>


        {% endif %}
  <div class="contact contact-form-section">
     <div class="contact-from-wrapper">
      {%- if section.settings.heading != blank -%}
        <h2 class="title title-wrapper--no-top-margin {{ section.settings.heading_size }}">{{ section.settings.heading  }}</h2>
      {%- else -%}
        <h2 class="visually-hidden">{{ 'templates.contact.form.title' | t }}</h2>
      {%- endif -%}
      {% if section.settings.headingtwo != blank  %}
         <p>{{ section.settings.headingtwo }}</p>
      {% endif %}
      {%- form 'contact', id: 'ContactForm', class: 'isolate' -%}
        {%- if form.posted_successfully? -%}
          <div class="form-status form-status-list form__message" tabindex="-1" autofocus>{% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}</div>
        {%- elsif form.errors -%}
          <div class="form__message">
            <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>{% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}</h2>
          </div>
          <ul class="form-status-list caption-large" role="list">
            <li>
              <a href="#ContactForm-email" class="link">
                {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
              </a>
            </li>
          </ul>
        {%- endif -%}
        <div class="contact__fields">
          <div class="field">
            <label class="field__label" for="ContactForm-name">Name</label>                          
            <input class="field__input" autocomplete="name" type="text" id="ContactForm-name" name="contact[{{ 'templates.contact.form.name' | t }}]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="Enter your name">
        
          </div>
          <div class="field field--with-error">
            <label class="field__label" for="ContactForm-email">Email <span aria-hidden="true">  {% include 'required.liquid' %} </span></label>

            <input
              autocomplete="email"
              type="email"
              id="ContactForm-email"
              class="field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
              {% endif %}
              placeholder="Enter your email"
            >
  
            {%- if form.errors contains 'email' -%}
              <small class="contact__field-error" id="ContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
              </small>
            {%- endif -%}
          </div>

        </div>
         
        <div class="field">
          <label class="field__label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }} <span aria-hidden="true">  {% include 'required.liquid' %} </span></label>
          <input type="tel" id="ContactForm-phone" class="field__input" autocomplete="tel" name="contact[{{ 'templates.contact.form.phone' | t }}]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="Enter your phone number">
            
          </div>

        <div class="field">
          <label class="form__label field__label" for="ContactForm-body">{{ 'templates.contact.form.comment' | t }} <span aria-hidden="true">  {% include 'required.liquid' %} </span></label>
          <textarea
            rows="10"
            id="ContactForm-body"
            class="text-area field__input"
            name="contact[{{ 'templates.contact.form.comment' | t }}]"
            placeholder="Enter comment"
          >
            {{- form.body -}}
          </textarea>
       
        </div>
        <div class="contact__button">
          <button type="submit" class="button">
            {{ 'templates.contact.form.send' | t }}
          </button>
        </div>
      {%- endform -%}
  
    </div>

  </div>
  </div>
</div>
</div>
</div>

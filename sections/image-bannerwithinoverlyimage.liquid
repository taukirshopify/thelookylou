{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}


<style>
  .iamgewithbacgound{
    width: 100%;
  height: 100%;
  background-image:url({{section.settings.image | img_url:'master'  }});
  background-size: cover;
  margin: 0;
  padding: 0;

  }
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="{% if section.settings.page_full_width %} page-full-width {% else %} page-width {% endif %} {% if section.settings.page_full_width_spacing %} page-full-width_spacing {% endif %}section-{{ section.id }}-padding isolate section-{{ section.id }}-padding iamgewithbacgound">
  <div class="row"> 


    <div class=" page-width image-wrapper-grid">
      <div class="banner__box content-container content-container--full-width-mobile ">
                        {{ section.settings.image_two | image_url: width: 3840 | image_tag:
                          loading: 'lazy',
                          height: height,
                          sizes: "100vw",
                          format: 'webp',
                          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                        }}
      </div>
      <div class="banner__box content-container content-container--full-width-mobile ">
                        {{ section.settings.image_three | image_url: width: 3840 | image_tag:
                          loading: 'lazy',
                          height: height,
                          sizes: "100vw",
                          format: 'webp',
                          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                        }}
      </div>
      <div class="banner__box content-container content-container--full-width-mobile ">
                        {{ section.settings.image_four | image_url: width: 3840 | image_tag:
                          loading: 'lazy',
                          height: height,
                          sizes: "100vw",
                          format: 'webp',
                          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                        }}
      </div>

  </div>

  </div>
</div>


<style>

 #Banner-{{ section.id }} {

    justify-content: center;
}
 #Banner-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}
.image-wrapper-grid{
  display: flex;
  align-items: center;
  @media screen and (max-width: 750px) {
    flex-direction: column;
  }
}
.image-wrapper-grid img{
width: 100%;
}
@media screen and (max-width: 750px) {
.banner__box{
  padding: 0 20px ;
}
}
</style>

{% schema %}
{
  "name": "Image Bg & overly image",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type":"checkbox",
      "id":"page_full_width",
       "default": false,
      "label": "t:sections.all.page_full_width.label"
    },
    {
      "type":"checkbox",
      "id":"page_full_width_spacing",
       "default": false,
      "label": "t:sections.all.page_full_width_spacing.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_two",
      "label": "t:sections.image-banner.settings.image_2.label"
    },
    {
      "type": "image_picker",
      "id": "image_three",
      "label": "t:sections.image-banner.settings.image_2.label"
    },
    {
      "type": "image_picker",
      "id": "image_four",
      "label": "t:sections.image-banner.settings.image_2.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding bottom",
      "default": 36
    },
   {
    "type": "header",
    "content": "t:sections.image-banner.settings.custom_class_heading.content"
    },
    {
    "type": "text",
    "id": "custom_class_name",
    "label": "t:sections.image-with-text.settings.custom_class_name.label"
    }
  ],
  "presets": [
    {
      "name": "Image Bg with Overly  Image"
    }
  ]
}
{% endschema %}

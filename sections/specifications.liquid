{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  
{% if section.settings.bg_image != blank %}
.section-{{ section.id }}-bg { background-image: url('{{ section.settings.bg_image | image_url: width: 1920 }}'); 
   background-repeat: no-repeat; background-size: 100%; background-attachment: scroll; background-position: bottom; }
   {% endif %}
  

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .section-{{ section.id }} .grid {flex-direction: row-reverse;
    align-items: center;
  }

    .section-{{ section.id }} .title-0 {
      {% render 'globalcolor' , color: section.settings.color_scheme_font %}
      font-size: {{ section.settings.heading_scale_mobile }}px !important; 
     
      }
    .section-{{ section.id }} .specification__text.rte>p,
    .section-{{ section.id }} h2.specification__heading >p{
      {% render 'globalcolor' , color: section.settings.color_scheme_font_body %}
     
      }


      .section-{{ section.id }} .specification_block h2.specification__heading{
      {% render 'globalcolor' , color: section.settings.color_scheme_font %}
    }



      @media screen and (min-width: 750px) {
          .section-{{ section.id }} .button-two {
            margin-left: 0px;
        }
        .section-{{ section.id }} .title-0{
    
          font-size:{{ section.settings.heading_scale }}px !important; 
        }

        .section-{{ section.id }} .specification__text.rte>p,
        .section-{{ section.id }} h2.title.h1{
          {% render 'globalcolor' , color: section.settings.color_scheme_font %}
         }
            .specification__text-item.grid__item {
              width: calc(35% - var(--grid-desktop-horizontal-spacing) / 2);
          }
            .specification__media-item.grid__item {
              width: calc(64% - var(--grid-desktop-horizontal-spacing) / 2);
              padding: 0 82px;
          }
      }



      @media screen and (max-width: 750px) {
      
        .specification_block .specification_image-item-list {
          margin-bottom: 0;
      }
      .specification_block {

        padding: 0.5rem;

        flex-direction: row;

    }

    .specification .specification__text-item .specification__content {

          grid-gap: 20px;

      }

      .section-{{ section.id }}   .banner__buttons.button-two {
        margin: 0 6px;
       }
       .specification__media-item.grid__item {
        padding: 0 !important;
       }
      }


{% comment %} video css  {% endcomment %}
.video-wrapper {
  position: relative;
}

.video-wrapper > video {
  width: 100%;
  vertical-align: middle;
  border-radius: 2rem;
  overflow: hidden;
}

.video-wrapper > video.has-media-controls-hidden::-webkit-media-controls {
  display: none;
}

.video-overlay-play-button {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 10px calc(50% - 50px);
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  opacity: 0.95;
  cursor: pointer;
  background-image: linear-gradient(transparent, #000);
  transition: opacity 150ms;
}

.video-overlay-play-button:hover {
  opacity: 1;
}

.video-overlay-play-button.is-hidden {
  display: none;
}


{{ 'component-specification.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  
{% if section.settings.bg_image != blank %}
.section-{{ section.id }}-bg { background-image: url('{{ section.settings.bg_image | image_url: width: 1920 }}'); 
   background-repeat: no-repeat; background-size: 100%; background-attachment: scroll; background-position: bottom; }
   {% endif %}
  

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .section-{{ section.id }} .grid {

    flex-direction: row-reverse;
    }
    .section-{{ section.id }} .specification__text.rte>p,
    .section-{{ section.id }} h2.image-with-text__heading{
      {% render 'globalcolor' , color: section.settings.color_scheme_font %}
     
      }
    
      @media screen and (min-width: 750px) {
        .section-{{ section.id }} .specification__text.rte>p,
        .section-{{ section.id }} h2.image-with-text__heading{
          {% render 'globalcolor' , color: section.settings.color_scheme_font %}
   

          }
    
      

    }
</style>

  <div class="specification section-{{ section.id }} {{ section.settings.custom_class_name }} section-{{ section.id }} specification--{{ section.settings.content_layout }} color-{{ section.settings.color_scheme }} gradient {% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == 'background-1' and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} {% if section.settings.bg_image != blank %}section-{{ section.id }}-bg{% endif %} ">
  <div class="{% if section.settings.page_full_width %} page-full-width {% else %} page-width {% endif %} {% if section.settings.page_full_width_spacing %} page-full-width_spacing {% endif %}section-{{ section.id }}-padding isolate">
    <div class="row">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
          <p class="specification-list-title__text specification-list-title__text--caption {{ section.settings.text_style }} {{ section.settings.text_style }}--{{ section.settings.text_size }} {{ section.settings.text_style }}" {{ section.shopify_attributes }}>{{ section.settings.subtitle | escape }}</p>
        {%- if section.settings.sub_heading != blank -%}  
         <h6 class="sub-heading">{{ section.settings.sub_heading | escape }}</h6>
         {%- endif -%} 
      <h2 class="title {{ section.settings.heading_size }}">
            {{ section.settings.title | escape }}
          </h2>
         <div class="specification list__text rte" {{ section.shopify_attributes }}>{{ section.settings.text }}</div> 
          {%- if section.settings.button_label != blank and show_mobile_slider -%}
            <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">{{ section.settings.button_label | escape }}</a>
          {%- endif -%}
      </div>
    {%- endunless -%}
  <div class="specification__grid  grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} specification__grid--reverse{% endif %}">
    <div class="specification__media-item specification__media-item--{{ section.settings.desktop_image_width }} specification__media-item--{{ section.settings.desktop_content_position }} grid__item">
      {% comment %} VIDEO CODE START  {% endcomment %}
                  <div class="video-wrapper">
                    <noscript>
                      <div class="video-section__media"
                        {% if section.settings.cover_image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.cover_image.aspect_ratio | times: 100 }}%;"{% endif %}
                      >
                        <a href="{{ section.settings.video_url }}" class="video-section__poster media media--transparent media--landscape{% if section.settings.cover_image == blank %} video-section__placeholder{% endif %}">
                          {%- if section.settings.cover_image != blank -%}
                            <img
                              srcset="{%- if section.settings.cover_image.width >= 375 -%}{{ section.settings.cover_image | image_url: width: 375 }} 375w,{%- endif -%}
                                {%- if section.settings.cover_image.width >= 750 -%}{{ section.settings.cover_image | image_url: width: 750 }} 750w,{%- endif -%}
                                {%- if section.settings.cover_image.width >= 1100 -%}{{ section.settings.cover_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                                {%- if section.settings.cover_image.width >= 1500 -%}{{ section.settings.cover_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                                {%- if section.settings.cover_image.width >= 1780 -%}{{ section.settings.cover_image | image_url: width: 1780 }} 1780w,{%- endif -%}
                                {%- if section.settings.cover_image.width >= 2000 -%}{{ section.settings.cover_image | image_url: width: 2000 }} 2000w,{%- endif -%}
                                {%- if section.settings.cover_image.width >= 3000 -%}{{ section.settings.cover_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                                {%- if section.settings.cover_image.width >= 3840 -%}{{ section.settings.cover_image | image_url: width: 3840 }} 3840w,{%- endif -%}
                                {{ section.settings.cover_image | image_url }} {{ section.settings.cover_image.width }}w"
                              src="{{ section.settings.cover_image | image_url: width: 1920 }}"
                              sizes="{% if section.settings.full_width %}100vw{% else %}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw{% endif %}"
                              alt="{{ 'sections.video.load_video' | t: description: section.settings.description | escape }}"
                              loading="lazy"
                              width="{{ section.settings.cover_image.width }}"
                              height="{{ section.settings.cover_image.height }}"
                            >
                          {%- else -%}
                            {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                          {%- endif -%}
                        </a>
                      </div>
                    </noscript>
                    <deferred-media class="video-section__media deferred-media no-js-hidden gradient global-media-settings{% if section.settings.full_width %} global-media-settings--full-width{% endif %}" data-media-id="{{ section.settings.video_url.id }}"
                      {% if section.settings.cover_image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.cover_image.aspect_ratio | times: 100 }}%;"{% endif %}
                    >
                      <button
                        id="Deferred-Poster-Modal-{{ section.settings.video_url.id }}"
                        class="video-section__poster media deferred-media__poster media--landscape"
                        type="button"
                      >
                        {%- if section.settings.cover_image != blank -%}
                          <img
                            srcset="{%- if section.settings.cover_image.width >= 375 -%}{{ section.settings.cover_image | image_url: width: 375 }} 375w,{%- endif -%}
                              {%- if section.settings.cover_image.width >= 750 -%}{{ section.settings.cover_image | image_url: width: 750 }} 750w,{%- endif -%}
                              {%- if section.settings.cover_image.width >= 1100 -%}{{ section.settings.cover_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                              {%- if section.settings.cover_image.width >= 1500 -%}{{ section.settings.cover_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                              {%- if section.settings.cover_image.width >= 1780 -%}{{ section.settings.cover_image | image_url: width: 1780 }} 1780w,{%- endif -%}
                              {%- if section.settings.cover_image.width >= 2000 -%}{{ section.settings.cover_image | image_url: width: 2000 }} 2000w,{%- endif -%}
                              {%- if section.settings.cover_image.width >= 3000 -%}{{ section.settings.cover_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                              {%- if section.settings.cover_image.width >= 3840 -%}{{ section.settings.cover_image | image_url: width: 3840 }} 3840w,{%- endif -%}
                              {{ section.settings.cover_image | image_url }} {{ section.settings.cover_image.width }}w"
                            src="{{ section.settings.cover_image | image_url: width: 1920 }}"
                            sizes="{% if section.settings.full_width %}100vw{% else %}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw{% endif %}"
                            alt="{{ 'sections.video.load_video' | t: description: section.settings.alt_text | escape }}"
                            loading="lazy"
                            width="{{ section.settings.cover_image.width }}"
                            height="{{ section.settings.cover_image.height }}"
                          >
                        {%- else -%}
                          {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                        {%- endif -%}
                        <span class="deferred-media__poster-button motion-reduce">
                          {%- render 'icon-play' -%}
                        </span>
                      </button>
                      <template>
                        {%- if section.settings.video_url.type == 'youtube' -%}
                          <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?enablejsapi=1" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen title="{{ section.settings.description | escape }}"></iframe>
                        {%- else -%}
                          <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}" class="js-vimeo" allow="autoplay; encrypted-media" allowfullscreen title="{{ section.settings.description | escape }}"></iframe>
                        {%- endif -%}
                      </template>
                    </deferred-media>
                      
                  </div>
        {% comment %} VIDEO CODE END HERE  {% endcomment %}
    </div>
    <div class="specification__text-item grid__item">
      <div id="ImageWithText--{{ section.id }}" class="specification__content specification__content--{{ section.settings.desktop_content_position }} specification__content--desktop-{{ section.settings.desktop_content_alignment }} specification__content--mobile-{{ section.settings.mobile_content_alignment }} specification__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container  {%-  if section.blocks.size > 3 %} layout-segmented{%- endif -%}">
      {%  if section.blocks.size > 8 %}  <div class="specification__text-items_group">{% endif %}
        {%- for block in section.blocks limit: 8 -%}   
        <div class="specification_block">
         <div class="specification_image-item-list">
            {%- if block.settings.block-image != blank -%}
          <img
            srcset="{%- if block.settings.image.width >= 165 -%}{{ block.settings.block-image | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if block.settings.block-image.width >= 360 -%}{{ block.settings.block-image | image_url: width: 360 }} 360w,{%- endif -%}
              {%- if block.settings.block-image.width >= 535 -%}{{ block.settings.block-image | image_url: width: 535 }} 535w,{%- endif -%}
              {%- if block.settings.block-image.width >= 750 -%}{{ block.settings.block-image | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if block.settings.block-image.width >= 1070 -%}{{ block.settings.block-image | image_url: width: 1070 }} 1070w,{%- endif -%}
              {%- if block.settings.block-image.width >= 1500 -%}{{ block.settings.block-image | image_url: width: 1500 }} 1500w,{%- endif -%}
              {{ block.settings.block-image | image_url }} {{ block.settings.block-image.width }}w"
            src="{{ block.settings.block-image | image_url: width: 1500 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.block-image.width }}"
            height="{{ block.settings.block-image.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
         </div>
          <div class="specification__text-item--list">
              <h2 class="specification__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading }}
              </h2>            
              <p class="specification__text specification__text--caption {{ block.settings.caption_style }} {{ block.settings.caption_style }}--{{ block.settings.caption_size }} {{ block.settings.caption_style }}" {{ block.shopify_attributes }}>{{ block.settings.caption | escape }}</p>            
              <div class="specification__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
              {%- if block.settings.button_label != blank -%}
                <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
          </div>
      </div>  
        {%- endfor -%}
         {%  if section.blocks.size > 3 %}</div>{% endif %}

      </div>
    </div>
  </div>
</div>
</div>
</div>

